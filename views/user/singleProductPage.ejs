                                var divUpd = $(this).parent().find('.value'), newVal = parseInt(divUpd.text(), 10) + 1;
                                if (newVal <= stock) {
                                    divUpd.text(newVal);
                                    updateCartQuantity(newVal);

                                }
                            });
                            $('.value-minus').on('click', function () {
                                let stock = $('#stock').text();
                                stock = parseInt(stock)
                                var divUpd = $(this).parent().find('.value'), newVal = parseInt(divUpd.text(), 10) - 1;
                                if (newVal >= 1) {
                                    divUpd.text(newVal);
                                    updateCartQuantity(newVal);
                                }
                            });



                        </script>
